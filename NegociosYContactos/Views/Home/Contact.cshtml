@{
    ViewBag.Title = "Contacto";
}
@Scripts.Render("~/bundles/contact")
@Scripts.Render("~/bundles/jqueryval")
<div class="jumbotron" style="float:left;">
    <h1>NEGOCIOS Y CONTACTOS</h1>
</div> 
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>
<address>
    Calle 27 Bis S 12 K 64<br />
    Bogotá, Colombia<br />
    <abbr title="Phone">P:</abbr>
    Cel: 320 405 13 71
</address>
<address>
    <strong>Administración:</strong>   <a href="mailto:administracion@negociosycontactos.com">administracion@negociosycontactos.com</a><br />
</address>
<br />
<div class="contact-container">
    <form id="frmContact">
        <div id="divSummaryErrors"><ul class="contact-error"></ul></div>
        <div style="padding:0.2em 0.2em 0.2em 0.2em;margin:0.2em 0.2em 0.2em 0.2em;border:0.2em inset">
            <div style="text-align:center;"><label>Envíanos un mensaje con este formulario de contacto</label></div>
            <br />
            <div><label style="text-align:left;width:6em;">Nombre:</label><input id="name" name="name" type="text" /></div>
            <div><label style="text-align:left;width:6em;">E-mail:</label><input id="email" name="email" type="email" /></div>
            <div><label style="text-align:left;width:6em;">Mensaje:</label><textarea id="message" name="message" cols="40" rows="5"></textarea></div>
            <br />
            <div id="divCapcha" style="padding:0.2em 0.2em 0.2em 0.2em;margin:0.2em 0.2em 0.2em 0.2em;border:0.2em inset">
                <label>Desliza la barra hasta obtener el valor:</label><label id="lblValorAleatorio" style="padding-left:0.2em;"></label>
                <div id="slider" style="margin-bottom:0.3em;"></div>
                <label for="amount">Valor:</label><input type="text" id="amount" readonly style="border:0; color:#f6931f; font-weight:bold;width:2em;text-align:left;">
            </div>
            <br />
            <div><p style="text-align:center;"><input id="btnEnviar" class="btn btn-primary" href="" type="submit" value="Enviar" /></p></div>
        </div>
    </form>
</div>
<br /><br />